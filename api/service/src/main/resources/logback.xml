<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %kvp is required as the default plaintext logging won't print out key value pairs. Example output: 2025-12-01T22:25:29.279Z  INFO - [    support-bot] [    virtual-175] c.c.s.ticket.TicketProcessingService     : Ticket created action=ticket_created id=123  -->
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} %5p --- [%15.15t] %-40.40logger{39} : %m %kvp%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
